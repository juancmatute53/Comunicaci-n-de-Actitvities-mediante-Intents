<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".recibeComentario">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewMensaje"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:text="Hello" android:textSize="24sp"
            android:textColor="@color/ic_store_background" app:layout_constraintVertical_bias="0.09"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="389dp"
            android:layout_height="313dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.371" app:layout_constraintHorizontal_bias="0.493"
            android:id="@+id/linearLayout4">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/margo2"
                android:id="@+id/imageViewCaptura"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="299dp"
            android:layout_height="111dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintVertical_bias="0.716">
        <Button
                android:text="Ingrese Fotografia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonCamara"
                android:background="#17298A"/>
        <Button
                android:text="Enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnEnviarCon"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>